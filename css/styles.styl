@import "utils/_reset"

// Variables -----------------------------------------------------------------
$red-color = #e4032e
$dark-color = #1b1d1f

// Base ----------------------------------------------------------------------
* { -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box }

html
  font-size: 62.5%
  height: 100%

body
  font-size: 16px
  font-size: 1.6rem

body, legend, input, textarea, button
  font-family: 'pt-sans', 'Helvetica Neue', 'Arial', 'sans-serif'
  line-height: 1.4
  color: #5d6770

a:link, a:visited { color: $red-color }
a:focus, a:link:hover { color: $red-color }

p, ul, ol, dl, blockquote, table, figure { margin: .8em 0 }

.clearfix, .wrap, ol
  &:after
    display: block
    content: ''
    clear: both

// Headings ------------------------------------------------------------------
hgroup > :first-child { margin-bottom: .3em }
hgroup > :first-child + * { margin-top: .3em }

h1, h2, h3, h4 { line-height: 1.1 }

h1
  color: #333
  font-size: 32px
  font-size: 3.2rem
  margin: 0

h2
  color: #acafb3
  font-size: 16px
  font-size: 1.6rem
  font-weight: 300
  text-transform: uppercase
  text-align: center

h3
  color: #333
  font-size: 19px
  font-size: 1.9rem
  margin: 1em 0

h4
  color: #333
  font-size: 16px
  font-size: 1.6rem
  margin: 1.3em 0

// Layout --------------------------------------------------------------------
.wrap
  position: relative
  width: 934px
  margin: 0 auto

section
  padding: 2.75em 0

ul, ol
  margin: 0
  padding: 0

li
  list-style-type: none
  display: inline

em
  font-style: normal
  font-weight: 700

.dark
  color: $dark-color

.col
  float: left
  margin: 0
  padding: 0 2%

.col-2
  width: 50%

.col-3
  width: 33.3%

// Header --------------------------------------------------------------------
header
  overflow: hidden
  height: 510px
  background: url(../images/header-bg.png) left top repeat
  
  a:link, a:visited { color: #fff }
  a:focus, a:link:hover { color: #fff }

  .wrap
    height: 100%

  figure
    position: absolute
    left: 0; bottom: -47px
    margin: 0

    .key
      position: absolute
      display: block
      width: 19px; height: 19px
      border-radius: 19px

      &:nth-child(2) { bottom: 178px; right: 140px }
      &:nth-child(3) { bottom: 161px; right: 123px }
      &:nth-child(4) { bottom: 145px; right: 140px }
      &:nth-child(5) { bottom: 161px; right: 156px }

  h1
    position: absolute
    bottom: 78px; right: 18px
    width: 425px; height: 139px
    background: url(../images/bivouac-boulevard-scion.png) left top no-repeat
    text-indent: 100%
    white-space: nowrap  
    overflow: hidden

  nav
    position: absolute
    bottom: 1.5em; right: 18px
    text-transform: uppercase

    li:first-child { font-weight: 700 }
    li + li { margin: 0 0 0 1em }

  .hint
    display: none
    position: absolute
    top: 12px; right: 18px

    li
      display: block
      float: left
      width: 24px; height: 24px
      color: #fff
      text-align: center
      border-radius: 24px

      &.valid
        background-color: #fff
        color: $red-color

    li + li { margin: 0 0 0 .3em }

// Intro ---------------------------------------------------------------------
#intro
  color: $dark-color

  div.col
    font-size: 30px
    font-size: 3.0rem
    line-height: 1.1

  p
    padding-top: .7em

  small
    display: block
    font-size: 18px
    font-size: 1.8rem
    line-height: 1.3
    padding: 1em 0 0

// Inscription ---------------------------------------------------------------
#inscription
  li
    font-size: 18px
    font-size: 1.8rem
    color: $dark-color;
    font-weight: 700
    padding: 1em 0 0

    small
      font-size: 16px
      font-size: 1.6rem
      color: #5a5f65
      display: block
      font-weight: 400

  #game
    height: 97px
    padding-left: 145px
    background: url(../images/video-game.png) left top no-repeat

  #animation
    height: 103px
    padding-left: 110px
    background: url(../images/animation.png) left top no-repeat

  #painting
    height: 97px
    padding-left: 100px
    background: url(../images/paint.png) left top no-repeat

  a
    display: block
    width: 55%
    margin: 2em auto 0
    color: #fff
    font-size: 24px
    font-size: 2.4rem
    text-align: center
    padding: .7em 0
    background-color: $red-color
    border-radius: 65px

  .wrap > small
    display: block
    width: 55%
    margin: 0 auto
    font-size: 12px
    font-size: 1.2rem
    text-align: center
    padding: 1em 5em 0

